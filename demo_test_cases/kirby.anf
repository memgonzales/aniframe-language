set FRAME_RATE to 10
set CANVAS_BACKGROUND to "#dedede"
set CANVAS_WIDTH to 500
set CANVAS_HEIGHT to 500

start_fr = 1

hoshi_no_kabi: Object

kabi_body = circle(250, 250, 270)
kabi_body.fill("#ffb6c1")
kabi_body.stroke("#ffb6c1")

func make_part(x: Number, y: Number, width: Number, height: Number, colr: Color) returns Object:
    part: Object = ellipse(x, y, width, height)
    part.fill(colr)
    part.stroke(colr)

    return part


l_eye = make_part(220, 210, 38, 90, "#000000")
l_eye_shine = make_part(220*2, 210*2-50, 38, 80, "#ffffff")
l_eye_shine.resize(1/2, 1, 1000)

l_eye += l_eye_shine


r_eye = make_part(220+60, 210, 38, 90, "#000000")
r_eye_shine = make_part((220+60)*2, 210*2-50, 38, 80, "#ffffff")
r_eye_shine.resize(1/2, 1, 1000)

r_eye.add(r_eye_shine)


smile: Object = curve(230, 150, 230, 272, 270, 272, 270, 150)
smile.stroke("#000000")
smile.fill("#ffb6c1")

l_cheek = make_part(170, 260, 40, 20, "#cc4668")
r_cheek = make_part(170+160, 260, 40, 20, "#cc4668")

l_hand = make_part(130, 280, 100, 110, "#ffb6c1")
r_hand = make_part(350, 150, 100, 110, "#ffb6c1")

l_foot = make_part(160, 370, 135, 100, "#cc4668")
r_foot = make_part(340, 370, 135, 100, "#cc4668")

hoshi_no_kabi = l_foot + r_foot+ l_hand + r_hand + kabi_body + l_eye + r_eye + smile + l_cheek + r_cheek

# r_hand.move(10* tan(start_fr * -1), start_fr, 30)

hoshi_no_kabi.draw(1, 1000)
